<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="@dimen/interval_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_number"
            android:text="工单号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/interval_mini"
            android:layout_below="@+id/tv_number"
            android:id="@+id/tv_progress"
            android:text="2小时前完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/go_to_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/interval_default"
        android:background="@color/content_line"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
</LinearLayout>